{
    "name": "drupal/apigee_m10n",
    "license": "GPL-2.0",
    "type": "drupal-module",
    "description": "Apigee Edge Monetization for Drupal",
    "require": {
        "php": ">=7.1",
        "cweagans/composer-patches": "^1.6",
        "commerceguys/intl": "^1.0",
        "drupal/apigee_edge": "dev-8.x-1.x-devteams"
    },
    "require-dev": {
        "behat/mink-extension": "v2.2",
        "behat/mink-selenium2-driver": "1.3.x-dev",
        "bex/behat-screenshot": "^1.2",
        "drupal/coder": "^8.3",
        "drupal/drupal-extension": "master-dev",
        "phpmd/phpmd": "^2.6",
        "phpmetrics/phpmetrics": "^2.4",
        "phpunit/phpunit": "^6.5"
    },
    "repositories": {
        "gh-apigee-edge-drupal": {
            "type": "vcs",
            "url": "git@github.com:apigee/apigee-edge-drupal.git"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "patches": {
            "apigee/apigee-client-php": {
                "Fix developer ID issue when unsubscribing from a rate plan": "https://github.com/apigee/apigee-client-php/files/2627181/unsubscribe-rate-plan-developer-id.patch.txt"
            },
            "drupal/core": {
                "`EntityViewBuilder::getBuildDefaults()` doesn't check for `RevisionableInterface`.": "https://www.drupal.org/files/issues/2019-01-10/2951487_15_no-tests.patch"
            }
        }
    }
}
