{#
/**
 * @file
 *   Rate plan include file. Use this whenever a rate  plan is a part of an object.
 *
 * Usage:
 *   @code {% include 'rate-plan-apigeex.json.twig' %} @endcode
 *
 * Variables:
 * - plan: The rate plan.
 *   - description:              Description of the rate plan.
 *   - displayName:              User-friendly display name for the rate plan.
 *   - id:                       ID of the rate plan.
 *   - name:                     Name of the rate plan.
 *   - apiproduct:               Name of the rate plan product.
 *   - currencyCode:             The rate plan currency code.
 *   - billingPeriod:            The rate plan billing period (MONTHLY, YEARLY, QUARTERLY).
 *   - state:                    Flag that specifies whether the rate plan should be published, making it available to developers.
 *   - recurringStartUnit:       Valid only if recurringType is set to CALENDAR. Day of the month to charge the recurring fee. For example, if the recurring fee is charged monthly and recurringStartUnit is set to 1, the recurring fee is charged on the first day of each month.
 *   - recurringType:            Schedule for the recurring fee. Valid values include: CALENDAR or CUSTOM.
 *   - ratePlanXFee:             One-time fee that is charged to each developer on the start date of the plan (that is, the date the developer purchases the plan).
 *   - startTime:                Timestamp when the rate plan starts in UTC.
 *   - endTime:                  Timestamp that the plan ends in UTC. Developers are not able to view the rate plan after this date. If you do not want the rate plan to end on a specific date, specify a null value.
 */
#}
{
    "id"                    : "{{ plan.name|default('Foo') }}",
    "name"                  : "{{ plan.name|default('Foo') }}",
    "displayName"           : "{{ plan.displayName|default('Foo displayName') }}",
    "billingPeriod"         : "{{ plan.billingPeriod|default('MONTHLY') }}",
    "apiproduct"            : "{{ plan.apiproduct|default('Foo Product') }}",
    "paymentFundingModel"   : "{{ plan.paymentFundingModel|default('POSTPAID') }}",
    "currencyCode"          : "{{ plan.currencyCode|default('USD') }}",
    "ratePlanXFee"          : [{
        "currencyCode": "USD",
        "units": "1",
        "nanos": 300000000
    }],
    "consumptionPricingType": "{{ plan.consumptionPricingType|default('FIXED_PER_UNIT') }}",
    "consumptionPricingRates": [
        {
            "fee": {
                "currencyCode": "USD",
                "units": "1",
                "nanos": 100000000
            }
        }
    ],
    "revenueShareType"      : "{{ plan.revenueShareType|default('FIXED') }}",
    "revenueShareRates"     : [
        {
            "sharePercentage": 17.56
        }
    ],
    "state"                 : "{{ plan.state|default('PUBLISHED') }}",
    "startTime"             : "{{ plan.startTime }}",
    "endTime"               : "{{ plan.endTime }}"
}
