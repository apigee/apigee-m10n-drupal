{#
/**
 * @file
 *   Currency include file.
 *
 * Usage:
 *   @code
 *   {% include 'currency.json.twig' %}
 *   @endcode
 *
 * Variables:
 * - currency: The SupportedCurrency entity.
 */
#}
{
    "description": "{{ currency.description|default('United States Dollars') }}",
    "displayName": "{{ currency.displayName|default('United States Dollars') }}",
    "id": "{{ currency.id|default('usd') }}",
    "minimumTopupAmount": {{ currency.minimumTopupAmount|default('10.0000') }},
    "name": "{{ currency.name|default('USD') }}",
    "organization": {% include 'org.json.twig' %},
    "status": "{{ currency.status|default('ACTIVE') }}",
    "virtualCurrency": {{ currency.virtualCurrency|default('false') }}
}
